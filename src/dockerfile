# Usa una imagen base de Node.js
FROM node:latest as builder

# Establece el directorio de trabajo en /app
WORKDIR /app

# Copia el archivo package.json y package-lock.json (si est치 presente) al directorio de trabajo
COPY package*.json ./

# Instala las dependencias del proyecto
RUN npm install

# Copia todo el c칩digo fuente al directorio de trabajo
COPY . .

# Construye la aplicaci칩n
RUN npm run build

# Utiliza Nginx para servir la aplicaci칩n construida
FROM nginx:alpine
COPY --from=builder /app/dist/* /usr/share/nginx/html/
 